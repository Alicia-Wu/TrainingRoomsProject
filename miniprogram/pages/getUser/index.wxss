button{
  padding-left: 10rpx;
  display: block;
  padding-right: 14rpx;
  box-sizing: border-box;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  background: #2d8cf0!important;
  color: #fff;
  font-size: 14px;
  text-align: center;
  vertical-align: middle;
  touch-action: manipulation;
  cursor: pointer;
  white-space: nowrap;
  user-select: none;
  border-radius: 2px;
  border: 0!important;
  position: relative;
  text-decoration: none;
  height: 44px;
  margin: 10px;
}
ec-canvas {
  width: 100%;
  height: 80%;
}
