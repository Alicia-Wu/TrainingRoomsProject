button {
  padding-left: 10rpx;
  display: block;
  padding-right: 14rpx;
  box-sizing: border-box;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  background: #2d8cf0 !important;
  color: #fff;
  font-size: 14px;
  text-align: center;
  vertical-align: middle;
  touch-action: manipulation;
  cursor: pointer;
  white-space: nowrap;
  user-select: none;
  border-radius: 2px;
  border: 0 !important;
  position: relative;
  text-decoration: none;
  height: 44px;
  margin: 10px;
}

ec-canvas {
  width: 100%;
  height: 80%;
}

section.profile {
  width: 325px;
  border: 1px solid #ffffff;
  border-radius: 8px;
  overflow: hidden;
  text-transform: uppercase;
}

.profile-header {
  height: 140px;
  background: #1c2438;
}

.profile-header image {
  -o-object-fit: cover;
  object-fit: cover;
}

.profile-content {
  padding: 0 30px 30px;
  width: 70%;
  margin: 200rpx auto;
  border-radius: 5px;
  color: #495060;
  text-align: center;
  background: #f8f8f9;
}

.profile-content image {
  width: 150px;
  height: 150px;
  border: 5px solid #ffffff;
  border-radius: 100%;
  background: #fff;
}

.profile-content h1 {
  margin: 25px 0 0;
  font-size: 1.4em;
  font-weight: 200;
  letter-spacing: 0.05em;
}


.padding-image{
  padding-top: 50rpx;
}